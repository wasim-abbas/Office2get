<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/btns_color"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".views.fragments.mainFragments.UpdateCategoryFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/llimg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_250sdp"
            android:background="@drawable/loginbg"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_45sdp"
                android:src="@drawable/messages" />

        </RelativeLayout>

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16sdp"
            android:fontFamily="@font/sf_prodisplay_regular"
            android:text="@string/update_category"
            android:textColor="@color/white"
            android:textSize="@dimen/_18ssp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:src="@drawable/ic_right_arrow"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/relativelayout_bg"
            android:outlineProvider="background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/llimg">

            <CheckBox
                android:id="@+id/myDesk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:background="@color/white"
                android:buttonTint="@color/btns_boder_color"
                android:drawableEnd="@drawable/ic_desktop2"
                android:drawablePadding="@dimen/_16ssp"
                android:fontFamily="@font/lato_bold"
                android:layoutDirection="rtl"
                android:padding="@dimen/_14sdp"
                android:text="@string/my_desk"
                android:textColor="#78909C"
                android:textSize="@dimen/_16ssp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/myOffice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/myDesk"
                android:buttonTint="@color/btns_boder_color"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:background="@color/white"
                android:drawableEnd="@drawable/ic_office2"
                android:drawablePadding="@dimen/_16ssp"
                android:fontFamily="@font/lato_bold"
                android:layoutDirection="rtl"
                android:padding="@dimen/_14sdp"
                android:text="@string/my_office"
                android:textColor="#78909C"
                android:textSize="@dimen/_16ssp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/myMeetingRoom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/myOffice"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:background="@color/white"
                android:buttonTint="@color/btns_boder_color"

                android:drawableEnd="@drawable/ic_metting_room2"
                android:drawablePadding="@dimen/_16ssp"
                android:fontFamily="@font/lato_bold"
                android:layoutDirection="rtl"
                android:padding="@dimen/_14sdp"
                android:text="@string/my_meeting_room"
                android:textColor="#78909C"
                android:textSize="@dimen/_16ssp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/myStudio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/myMeetingRoom"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:background="@color/white"
                android:drawableEnd="@drawable/ic_studio2"
                android:drawablePadding="@dimen/_16ssp"
                android:fontFamily="@font/lato_bold"
                android:layoutDirection="rtl"
                android:buttonTint="@color/btns_boder_color"
                android:padding="@dimen/_14sdp"
                android:text="@string/my_meeting_room"
                android:textColor="#78909C"
                android:textSize="@dimen/_16ssp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/myStudio"
                android:layout_margin="@dimen/_16sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:background="@color/white"
                android:fontFamily="@font/lato_bold"
                android:padding="@dimen/_8ssp"
                android:paddingStart="@dimen/_16ssp"
                android:text="@string/title"
                android:textColor="@color/drawe_btn_color"
                android:textSize="@dimen/_16ssp" />


            <TextView
                android:id="@+id/btnProceed"
                style="@style/btns_style"
                android:layout_below="@id/edTitle"
                android:layout_marginTop="@dimen/_16sdp"
                android:layout_marginBottom="@dimen/_16sdp"
                android:background="@drawable/btn__color_bg"
                android:text="@string/save"
                android:textColor="@color/white" />


        </RelativeLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>